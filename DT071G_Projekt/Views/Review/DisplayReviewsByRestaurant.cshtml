@model List<DT071G_Projekt.Models.RestaurantReview>

@{
    ViewData["Title"] = "Reviews for " + ViewData["Restaurant"];
}

<h2>Reviews for @ViewData["Restaurant"]:</h2>

@if (Model.Count == 0)
{
    <p>No reviews available for @ViewData["Restaurant"].</p>
}
else
{
    <ul>
        @foreach (var review in Model)
        {
            <li>
                <strong>@review.Author:</strong> @review.Review
            </li>
        }
    </ul>
}

<p>
    <a asp-controller="Review" asp-action="ReviewsByRestaurant" class="text-dark text-muted">Back to Restaurants</a>
</p>
