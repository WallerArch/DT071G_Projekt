@model List<string>

<h2>Choose a restaurant to view reviews:</h2>

@if (Model.Count == 0)
{
    <p>No restaurants available.</p>
}
else
{
    <ul>
        @for (int i = 0; i < Model.Count; i++)
        {
            <li>
                <a asp-controller="Review" asp-action="DisplayReviewsByRestaurant" asp-route-restaurant="@Model[i]">@Model[i]</a>
            </li>
        }
    </ul>
}

<p>
    <a asp-controller="Home" asp-action="Index" class="text-dark">Back to Home Page</a>
</p>
