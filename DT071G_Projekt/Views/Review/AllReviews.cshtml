@model List<DT071G_Projekt.Models.RestaurantReview>
@{
    ViewData["Title"] = "Reviews";
}
<h2>Restaurant Reviews</h2>

@if (Model.Count == 0)
{
    <p>No reviews available.</p>
}
else
{
    <ul>
        @foreach (var review in Model)
        {
            <li>
                <strong>@review.Author</strong> was at <strong>@review.Restaurant</strong> and says: "@review.Review"
            </li>
        }
    </ul>
}

<p>
    <a asp-controller="Home" asp-action="Index" class="text-dark">Back to Home Page</a>
</p>
