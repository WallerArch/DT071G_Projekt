@{
}
@{
    ViewData["Title"] = "Write Review";
}

<h2>Write a new restaurant review</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post" action="@Url.Action("SubmitReview")">
    <div>
        <label for="userReview">Your review:</label>
        <textarea id="userReview" name="userReview" required></textarea>
    </div>
    <div>
        <label for="userName">Your name:</label>
        <input type="text" id="userName" name="userName" required>
    </div>
    <div>
        <label for="reviewedRestaurant">Restaurant you visited:</label>
        <input type="text" id="reviewedRestaurant" name="reviewedRestaurant" required>
    </div>
    <button type="submit">Submit Review</button>
</form>
