@model List<DT071G_Projekt.Models.RestaurantReview>

<h2>Reviews by @ViewData["Author"]:</h2>

@if (Model.Count == 0)
{
    <p>No reviews available for @ViewData["Author"].</p>
}
else
{
    <ul>
        @foreach (var review in Model)
        {
            <li>
                <strong>@review.Restaurant:</strong> @review.Review
            </li>
        }
    </ul>
}

<p>
    <a asp-controller="Review" asp-action="ReviewsByAuthor">Back to Authors</a>
</p>
