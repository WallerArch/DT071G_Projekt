@model List<DT071G_Projekt.Models.RestaurantReview> // Hämtar modellen för listan som skrivs ut nedan till skärmen

@{
    ViewData["Title"] = "Reviews by "+ViewData["Author"];
}

<h2>Reviews by @ViewData["Author"]:</h2>

@if (Model.Count == 0)
{
    <p>No reviews available for @ViewData["Author"].</p>
}
else
{
    <ul>
        @foreach (var review in Model) // Här loopas alla skribentens recensioner igenom och skrivs nedan ut till skärmen
        {
            <li>
                <strong>@review.Restaurant:</strong> @review.Review
            </li>
        }
    </ul>
}

<p>
    <a asp-controller="Review" asp-action="ReviewsByAuthor" class="text-dark text-muted">Back to Authors</a>
</p>
